<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StudyWithMe</title>

    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- Animate.css for animations -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />

    <!-- Alpine.js for interactive features -->
    <script src="//unpkg.com/alpinejs" defer></script>

    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="bg-gray-100">

    <!-- Navbar -->
    <nav class="bg-purple-600 text-white p-4 shadow-md animate__animated animate__fadeInDown">
        <div class="container mx-auto flex justify-between items-center">
            <a href="/" class="text-2xl font-bold hover:text-gray-200 transition animate__animated animate__fadeInLeft">StudyWithMe</a>
            <div class="space-x-4">
                <a href="/" class="hover:text-gray-200 transition">Home</a>
                <a asp-controller="StudyMaterials" asp-action="Index" class="hover:text-gray-200 transition">Materials</a>
                <a asp-controller="StudyMaterials" asp-action="Create" class="hover:text-gray-200 transition">Add Material</a>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="container mx-auto mt-8 animate__animated animate__fadeIn">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="bg-purple-600 text-white p-4 mt-12 text-center animate__animated animate__fadeInUp">
        &copy; @DateTime.Now.Year StudyWithMe. All rights reserved.
    </footer>

    @RenderSection("Scripts", required: false)
</body>
</html>
