@model StudyWithMe.Models.StudyMaterial

@{
    ViewData["Title"] = "Add New Study Material";
}

<!-- Hero Form Section -->
<section class="bg-gradient-to-r from-purple-500 to-indigo-600 text-white p-16 rounded-b-3xl text-center animate__animated animate__fadeIn">
    <h1 class="text-4xl font-extrabold mb-4 animate__animated animate__fadeInDown">Add New Study Material</h1>
    <p class="text-lg mb-6 animate__animated animate__fadeInUp animate__delay-1s">Fill the details below and upload your PDF</p>
</section>

<!-- Form Card -->
<form asp-action="Create" method="post" enctype="multipart/form-data"
      class="bg-white shadow-2xl rounded-2xl p-8 max-w-xl mx-auto mt-8 animate__animated animate__fadeInUp">

    <!-- Subject -->
    <div class="mb-6">
        <label class="block text-gray-700 font-semibold mb-2">Subject</label>
        <input asp-for="Subject" class="w-full border border-gray-300 rounded-lg p-3 focus:ring-2 focus:ring-purple-500 focus:outline-none" placeholder="Enter Subject Name" required />
    </div>

    <!-- Topic -->
    <div class="mb-6">
        <label class="block text-gray-700 font-semibold mb-2">Topic</label>
        <input asp-for="Topic" class="w-full border border-gray-300 rounded-lg p-3 focus:ring-2 focus:ring-purple-500 focus:outline-none" placeholder="Enter Topic Name" required />
    </div>

    <!-- Description -->
    <div class="mb-6">
        <label class="block text-gray-700 font-semibold mb-2">Description</label>
        <textarea asp-for="Description" rows="4" class="w-full border border-gray-300 rounded-lg p-3 focus:ring-2 focus:ring-purple-500 focus:outline-none" placeholder="Enter Description"></textarea>
    </div>

    <!-- PDF Upload -->
    <div class="mb-6">
        <label class="block text-gray-700 font-semibold mb-2">Upload PDF File</label>
        <input type="file" name="PdfFile" accept=".pdf"
               class="w-full border border-gray-300 rounded-lg p-3 cursor-pointer hover:border-purple-500 hover:shadow-lg transition duration-300 animate__animated animate__fadeInLeft" />
    </div>

    <!-- Buttons -->
    <div class="flex justify-between items-center">
        <button type="submit"
                class="bg-gradient-to-r from-purple-500 to-indigo-600 text-white px-6 py-3 rounded-xl hover:scale-105 transform transition animate__animated animate__pulse animate__infinite">
            Save Material
        </button>
        <a asp-action="Index"
           class="bg-gray-300 px-5 py-3 rounded-xl hover:bg-gray-400 transition animate__animated animate__fadeIn">
            Back to List
        </a>
    </div>

</form>
